<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Kotlin_customer_nom_movie_ticket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Theme riêng cho SplashActivity -->
    <style name="Theme.Kotlin_customer_nom_movie_ticket.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background cho splash screen -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- Ẩn ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Tùy chỉnh màu thanh trạng thái -->
        <item name="android:statusBarColor">@color/orange</item>
        <!-- Đảm bảo nội dung không bị cắt bởi thanh trạng thái -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Tắt light status bar để đồng bộ với màu orange -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="TextColor"><item name="android:textColor">@color/black</item></style>
    <style name="viewColor"><item name="android:background">@color/light_grey</item></style>
    <style name="dialogColor"><item name="android:background">@color/light_grey</item></style>
    <style name="ratingColor"><item name="android:progressTint">#FF5722</item></style>


    <style name="Theme.Kotlin_customer_nom_movie_ticket" parent="Base.Theme.Kotlin_customer_nom_movie_ticket" />

    <!-- RadioButton style -->
    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/RadioButtonOverlay</item>
    </style>

    <style name="RadioButtonOverlay" parent="">
        <item name="colorSecondary">@color/orange</item>
    </style>

    <style name="Theme.AppCompat.DayNight.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

<!--    <style name="DialogAnimation">-->
<!--        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>-->
<!--        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>-->
<!--    </style>-->

    <style name="CustomText">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- Độ mờ của nền phía sau -->
    </style>
</resources>