<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/orange" android:drawable="@drawable/bg_off" android:state_checked="true" android:state_window_focused="false" />
    <item android:color="@color/white" android:drawable="@drawable/bg_on" android:state_checked="false" android:state_window_focused="false" />

    <item android:color="@color/orange" android:drawable="@drawable/bg_off" android:state_checked="true" android:state_pressed="true" />
    <item android:color="@color/white" android:drawable="@drawable/bg_on" android:state_checked="false" android:state_pressed="true" />

    <item android:color="@color/orange" android:drawable="@drawable/bg_off" android:state_checked="true" android:state_focused="true" />
    <item android:color="@color/white" android:drawable="@drawable/bg_on" android:state_checked="false" android:state_focused="true" />

    <item android:color="@color/orange" android:drawable="@drawable/bg_off" android:state_checked="false" />
    <item android:color="@color/white" android:drawable="@drawable/bg_on" android:state_checked="true" />
</selector>