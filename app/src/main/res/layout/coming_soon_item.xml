<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="375dp"
    android:background="@drawable/item_radius_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic_movie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/pic_item_top"
        app:srcCompat="@drawable/chrishemsworth" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="DEADPOOL 3"
        style="@style/TextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/urbanist_bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAddWatchlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_movie" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddWatchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_grey_stroke_background"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Danh sách theo dõi"
        android:maxLines="2"
        style="@style/TextColor"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>